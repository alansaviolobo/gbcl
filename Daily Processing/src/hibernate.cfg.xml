<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/goabottling</property>
        <property name="connection.username">goabottling</property>
        <property name="connection.password">goabottling</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        <property name="current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>

        <mapping resource="com/technotrix/pepsi/domainObjects/FillerDowntime.hbm.xml"/>
        <mapping resource="com/technotrix/pepsi/domainObjects/LineProductivity.hbm.xml"/>
        <mapping resource="com/technotrix/pepsi/domainObjects/ProductionProductivity.hbm.xml"/>
        <mapping resource="com/technotrix/pepsi/domainObjects/TotalPaidHours.hbm.xml"/>
        <mapping resource="com/technotrix/pepsi/domainObjects/WarehouseBreakages.hbm.xml"/>
        <mapping resource="com/technotrix/pepsi/domainObjects/WarehouseProductivity.hbm.xml"/>
    </session-factory>
</hibernate-configuration>